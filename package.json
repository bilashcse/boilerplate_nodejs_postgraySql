{
  "name": "boilerplate_nodejs_postgray",
  "version": "0.0.1",
  "description": "NodeJs Postgray boilerplate",
  "main": "app.js",
  "scripts": {
    "lint": "eslint './server/**/*.js' --quiet",
    "prettier": "prettier --write './server/**/*.{js,ts}'",
    "start": "nodemon --exec babel-node ./server/app.js"
  },
  "lint-staged": {
    "*.{js}": [
      "npx prettier --write",
      "eslint --quiet"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "bilash <bilashcse@gmail.com> (https://github.com.bd/bilashcse)",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.10.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.10.0",
    "babel-cli": "^7.0.0-0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "celebrate": "^12.1.1",
    "cors": "^2.8.5",
    "ejs": "^3.1.2",
    "express": "^4.17.1",
    "lint-staged": "^10.2.2",
    "lodash": "^4.17.15",
    "log4js": "^6.2.1",
    "moment": "^2.24.0",
    "mysql2": "^2.1.0",
    "nodemon": "^2.0.3",
    "pg": "^8.2.1",
    "sequelize": "^5.21.7"
  }
}
